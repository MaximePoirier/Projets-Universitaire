<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <TextView
        android:id="@+id/row_geoloc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp" />
    <TextView android:id="@+id/row_lat" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@android:color/black"  />
    <TextView android:id="@+id/row_lon" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@android:color/black"  />

    <TextView android:id="@+id/row_note" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/black" android:layout_alignLeft="@+id/row_geoloc" android:layout_below="@+id/row_geoloc" />

</RelativeLayout>